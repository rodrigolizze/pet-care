<div class="container py-3">
  <% if flash[:notice].present? %>
    <div class="alert alert-success"><%= flash[:notice] %></div>
  <% end %>
  <% if flash[:alert].present? %>
    <div class="alert alert-danger"><%= flash[:alert] %></div>
  <% end %>

  <!-- Header / Profile card -->
  <div class="ps-card shadow-sm mb-4 border-0">
    <div class="ps-card-header bg-soft-emerald">
      <div class="d-flex align-items-center gap-3">
        <div class="avatar-initial">
          <span><%= @user.name.to_s.first&.upcase %></span>
        </div>
        <div>
          <h1 class="h4 m-0 ps-title">Perfil de <%= @user.name %></h1>
          <div class="text-muted small mt-1">
            <span class="me-3">
              <i class="bi bi-geo-alt me-1"></i>
              <strong>Endereço:</strong> <%= @user.address %>
            </span>
            <span>
              <i class="bi bi-envelope me-1"></i>
              <strong>Email:</strong> <%= @user.email %>
            </span>
          </div>
        </div>
      </div>
      <span class="ps-chip chip-emerald d-none d-md-inline">Cuidador verificado</span>
    </div>
  </div>

  <!-- Bulk booking form -->
  <% if user_signed_in? && current_user != @user %>
    <div class="ps-card shadow-sm mb-4 border-0">
      <div class="ps-card-header bg-soft-indigo">
        <div class="d-flex align-items-center gap-2">
          <div class="pill-accent pill-indigo"></div>
          <h2 class="h6 m-0 text-muted">Reservar por período</h2>
        </div>
        <span class="ps-chip chip-indigo">Múltiplos dias</span>
      </div>

      <div class="card-body">
        <%= form_with url: bulk_create_bookings_path, method: :post, local: true, class: "row g-3" do %>
          <%= hidden_field_tag :sitter_id, @user.id %>

          <div class="col-12 col-md-3">
            <%= label_tag :start_date, "Início", class: "form-label fw-semibold" %>
            <div class="input-group">
              <span class="input-group-text bg-white"><i class="bi bi-calendar-event"></i></span>
              <%= date_field_tag :start_date, nil, min: Date.current, class: "form-control", required: true %>
            </div>
          </div>

          <div class="col-12 col-md-3">
            <%= label_tag :end_date, "Término", class: "form-label fw-semibold" %>
            <div class="input-group">
              <span class="input-group-text bg-white"><i class="bi bi-calendar-check"></i></span>
              <%= date_field_tag :end_date, nil, min: Date.current, class: "form-control", required: true %>
            </div>
          </div>

          <div class="col-12 col-md-3">
            <%= label_tag :pet_name, "Nome do Pet", class: "form-label fw-semibold" %>
            <div class="input-group">
              <span class="input-group-text bg-white"><i class="bi bi-paw"></i></span>
              <%= text_field_tag :pet_name, nil, class: "form-control", required: true %>
            </div>
          </div>

          <div class="col-12 col-md-3">
            <%= label_tag :animal_type, "Tipo", class: "form-label fw-semibold" %>
            <%= select_tag :animal_type,
                  options_for_select([["Cachorro","Cachorro"],["Gato","Gato"],["Coelho","Coelho"],["Pássaro","Pássaro"]]),
                  class: "form-select", required: true %>
          </div>

          <div class="col-12 col-md-3">
            <%= label_tag :pet_size, "Tamanho", class: "form-label fw-semibold" %>
            <%= select_tag :pet_size,
                  options_for_select([["Pequeno","Pequeno"],["Médio","Médio"],["Grande","Grande"]]),
                  class: "form-select", required: true %>
          </div>

          <div class="col-12 col-md-3">
            <%= label_tag :pet_birth_year, "Ano nasc.", class: "form-label fw-semibold" %>
            <div class="input-group">
              <span class="input-group-text bg-white"><i class="bi bi-cake"></i></span>
              <%= number_field_tag :pet_birth_year, nil, in: 2000..Date.current.year, class: "form-control", required: true %>
            </div>
          </div>

          <div class="col-12">
            <div class="alert alert-light border d-flex align-items-center gap-2 m-0" role="note" style="border-color: var(--ps-border);">
              <i class="bi bi-info-circle text-success"></i>
              <div>Reservas serão criadas apenas para <strong>dias livres</strong> dentro do período.</div>
            </div>
          </div>

          <div class="col-12 d-flex flex-wrap gap-2 pt-1">
            <%= submit_tag "Reservar período", class: "btn btn-ps" %>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <!-- Calendar of future availability -->
  <div class="d-flex justify-content-between align-items-center mb-2">
    <h2 class="h5 m-0 ps-title text-gradient-indigo">Calendário de Disponibilidade</h2>
  </div>

  <% availability_by_date = @availabilities.index_by(&:date) %>

  <% months = [Date.current.beginning_of_month,
               (Date.current + 1.month).beginning_of_month,
               (Date.current + 2.months).beginning_of_month] %>

  <div class="row g-3">
    <% months.each do |month_start| %>
      <% month_end   = month_start.end_of_month %>
      <% first_wday  = month_start.wday %>
      <% days_in_mon = (month_start..month_end).to_a %>

      <div class="col-12 col-md-4">
        <div class="ps-card shadow-sm h-100 border-0">
          <div class="ps-card-header bg-soft-slate">
            <div class="d-flex align-items-center gap-2 mx-auto">
              <div class="pill-accent pill-slate"></div>
              <strong><%= I18n.l(month_start, format: "%B de %Y") %></strong>
            </div>
            <span class="ps-chip chip-slate d-none d-md-inline">Próximos dias</span>
          </div>

          <div class="card-body p-0">
            <table class="table ps-table table-sm m-0 text-center align-middle">
              <thead class="table-light">
                <tr>
                  <th class="small">D</th><th class="small">S</th><th class="small">T</th>
                  <th class="small">Q</th><th class="small">Q</th><th class="small">S</th><th class="small">S</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <% first_wday.times do %>
                    <td class="text-muted small calendar-cell"></td>
                  <% end %>

                  <% days_in_mon.each do |day| %>
                    <% av     = availability_by_date[day] %>
                    <% booked = av&.booking.present? %>
                    <% past   = day < Date.current %>

                    <td class="calendar-cell">
                      <div class="d-flex flex-column align-items-center">
                        <div class="fw-semibold"><%= day.day %></div>

                        <% if av.nil? || past %>
                          <span class="badge text-bg-light mt-1">—</span>

                        <% elsif booked %>
                          <% b = av.booking %>
                          <span class="badge text-bg-secondary mt-1">Reservado</span>

                          <% if user_signed_in? && (current_user == @user || current_user == b.user) %>
                            <% batch_size = Booking.where(group_token: b.group_token).count if b.group_token.present? %>
                            <div class="mt-1">
                              <%= button_to (b.group_token.present? && batch_size.to_i > 1 ? "Cancelar" : "Cancelar"),
                                    availability_booking_path(av, b),
                                    method: :delete,
                                    data: { confirm: "Cancelar #{b.group_token.present? && batch_size.to_i > 1 ? 'todas as reservas do período' : 'esta reserva'}?" },
                                    class: "btn btn-outline-danger btn-sm py-0 px-2 rounded-pill" %>
                            </div>
                          <% end %>

                        <% else %>
                          <span class="badge text-bg-success mt-1">Livre</span>
                        <% end %>
                      </div>
                    </td>

                    <% if day.wday == 6 && (day != month_end) %>
                      </tr><tr>
                    <% end %>
                  <% end %>

                  <% last_wday = month_end.wday %>
                  <% (6 - last_wday).times do %>
                    <td class="text-muted small calendar-cell"></td>
                  <% end %>
                </tr>
              </tbody>
            </table>
          </div>

          <div class="card-footer small text-muted">
            <span class="badge text-bg-success">Livre</span> Disponível —
            <span class="badge text-bg-secondary">Reservado</span> Indisponível
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
