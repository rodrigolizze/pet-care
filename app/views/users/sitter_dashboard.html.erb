<div class="container py-3">
  <!-- Header -->
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="ps-title m-0 text-gradient-emerald">Painel do cuidador</h1>
    <%= link_to new_availability_path,
                class: "btn btn-ps d-flex align-items-center gap-2" do %>
      <i class="bi bi-calendar-plus"></i>
      <span>Adicionar Disponibilidade</span>
    <% end %>
  </div>

  <!-- Welcome -->
  <div class="alert alert-info">
    Bem-vindo, <strong><%= current_user.name %></strong>! Aqui você pode gerenciar suas disponibilidades e ver informações do seu perfil.
  </div>

  <!-- Minhas Disponibilidades -->
  <div class="ps-card shadow-sm border-0 mb-4">
    <div class="ps-card-header bg-soft-emerald">
      <div class="d-flex align-items-center gap-2">
        <div class="pill-accent pill-emerald"></div>
        <h2 class="h6 m-0 text-muted">Minhas Disponibilidades</h2>
      </div>
      <span class="ps-chip chip-emerald">Agenda</span>
    </div>

    <div class="card-body p-0">
      <% if @availabilities.any? %>
        <div class="table-responsive">
          <table class="table ps-table table-hover align-middle m-0">
            <thead class="table-tint-emerald">
              <tr>
                <th>Data</th>
                <th style="width: 160px;">Ações</th>
              </tr>
            </thead>
            <tbody>
              <% @availabilities.each do |availability| %>
                <tr class="row-hover-emerald">
                  <td class="fw-semibold"><%= availability.date.strftime("%d/%m/%Y") %></td>
                  <td class="d-flex align-items-center gap-2">
                    <%= button_to "Excluir",
                          availability_path(availability),
                          method: :delete,
                          data: { confirm: "Tem certeza que deseja excluir esta disponibilidade?" },
                          class: "btn btn-sm btn-outline-danger rounded-pill" %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <div class="p-4">
          <div class="alert alert-secondary m-0">Você ainda não adicionou nenhuma disponibilidade.</div>
        </div>
      <% end %>
    </div>
  </div>

  <div class="row g-4">
    <!-- Sobre Mim -->
    <div class="col-12 col-lg-6">
      <div class="ps-card shadow-sm border-0 h-100">
        <div class="ps-card-header bg-soft-indigo">
          <div class="d-flex align-items-center gap-2">
            <div class="pill-accent pill-indigo"></div>
            <h2 class="h6 m-0 text-muted">Sobre Mim</h2>
          </div>
          <span class="ps-chip chip-indigo">Perfil</span>
        </div>
        <div class="card-body">
          <dl class="row mb-2">
            <dt class="col-5 col-md-4 text-muted small">Nome</dt>
            <dd class="col-7 col-md-8"><%= current_user.name %></dd>

            <dt class="col-5 col-md-4 text-muted small">Bio</dt>
            <dd class="col-7 col-md-8"><%= current_user.bio.presence || "Nenhuma bio fornecida." %></dd>

            <dt class="col-5 col-md-4 text-muted small">Experiência</dt>
            <dd class="col-7 col-md-8"><%= current_user.experience.presence || "Nenhuma experiência informada." %></dd>

            <dt class="col-5 col-md-4 text-muted small">Cidade</dt>
            <dd class="col-7 col-md-8"><%= current_user.city.presence || "Não informada" %></dd>
          </dl>

          <%= link_to "✏️ Editar informações", edit_sitter_users_path, class: "btn btn-outline-secondary rounded-pill" %>
        </div>
      </div>
    </div>

    <!-- Como é a hospedagem -->
    <div class="col-12 col-lg-6">
      <div class="ps-card shadow-sm border-0 h-100">
        <div class="ps-card-header bg-soft-slate">
          <div class="d-flex align-items-center gap-2">
            <div class="pill-accent pill-slate"></div>
            <h2 class="h6 m-0 text-muted">Como é a hospedagem</h2>
          </div>
          <span class="ps-chip chip-slate">Estrutura</span>
        </div>
        <div class="card-body">
          <%# --- SAFE mapping for animal_sizes (avoids ERB case parsing issues) --- %>
          <% size_map = { "small" => "Pequeno", "medium" => "Médio", "big" => "Grande", "all" => "Todos os portes" } %>
          <% size_label = size_map[current_user.animal_sizes] || "Não informado" %>

          <ul class="list-unstyled m-0">
            <li class="mb-2">
              <i class="bi bi-house-door me-1 text-muted"></i>
              <strong>Moro em:</strong>
              <%= current_user.property_type == "house" ? "Casa" : (current_user.property_type == "apartment" ? "Apartamento" : "Não informado") %>
            </li>

            <li class="mb-2">
              <i class="bi bi-arrows-fullscreen me-1 text-muted"></i>
              <strong>Aceito animais de porte:</strong>
              <%= size_label %>
            </li>

            <li class="mb-2">
              <i class="bi bi-flower3 me-1 text-muted"></i>
              <strong>Possui área externa:</strong>
              <%= current_user.backyard ? "Sim" : "Não" %>
            </li>

            <li class="mb-2">
              <i class="bi bi-heart-pulse me-1 text-muted"></i>
              <strong>Tem outros animais:</strong>
              <%= current_user.has_pet ? "Sim" : "Não" %>
            </li>

            <li class="mb-0">
              <i class="bi bi-grid-3x3-gap me-1 text-muted"></i>
              <strong>Janelas teladas:</strong>
              <%= current_user.screened_windows ? "Sim" : "Não" %>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
