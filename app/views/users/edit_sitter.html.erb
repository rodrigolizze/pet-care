<%# views/users/become_or_edit_sitter.html.erb (use your actual file name) %>
<% title_text = current_user.sitter? ? "Editar informações do Cuidador" : "Torne-se um Cuidador" %>

<div class="container py-4" style="max-width: 900px;">
  <div class="ps-card shadow-sm border-0 mb-4">
    <div class="ps-card-header bg-soft-emerald">
      <div class="d-flex align-items-center gap-2">
        <div class="pill-accent pill-emerald"></div>
        <h1 class="ps-title h4 m-0"><%= title_text %></h1>
      </div>
      <span class="ps-chip chip-emerald"><%= current_user.sitter? ? "Atualize seu perfil" : "Comece agora" %></span>
    </div>

    <div class="card-body">
      <%= render "sitter_form" %>
    </div>
  </div>
</div>
