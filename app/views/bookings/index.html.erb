<div class="container py-3">
  <h1 class="mb-4">Minhas Reservas</h1>

  <!-- As client -->
  <div class="card shadow-sm mb-4">
    <div class="card-header d-flex align-items-center justify-content-between">
      <h2 class="h5 m-0">Como cliente</h2>
    </div>
    <div class="card-body p-0">
      <% if @my_bookings.any? %>
        <div class="table-responsive">
          <table class="table table-striped table-hover align-middle m-0">
            <thead class="table-light">
              <tr>
                <th style="width: 120px;">Data</th>
                <th>Cuidador</th>
                <th>Pet</th>
                <th style="width: 160px;">Ações</th>
              </tr>
            </thead>
            <tbody>
              <% @my_bookings.each do |b| %>
                <% sitter = b.availability.user %>
                <tr>
                  <td class="fw-semibold"><%= b.availability.date.strftime("%d/%m/%Y") %></td>
                  <td><%= sitter.name %></td>
                  <td class="text-muted">
                    <%= "#{b.pet_name} — #{b.animal_type}, #{b.pet_size}, nasc. #{b.pet_birth_year}" %>
                  </td>
                  <td class="d-flex gap-2">
                    <%= link_to wa_link_for(sitter, b, as: :client),
                                class: "btn btn-success btn-sm rounded-circle p-2",
                                target: "_blank",
                                rel: "noopener",
                                title: "Conversar no WhatsApp" do %>
                      <i class="bi bi-whatsapp me-1"></i>
                    <% end %>

                    <%= button_to "Cancelar",
                          availability_booking_path(b.availability, b),
                          method: :delete,
                          data: { confirm: "Cancelar esta reserva?" },
                          class: "btn btn-outline-danger btn-sm" %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <div class="p-4">
          <div class="alert alert-secondary m-0">Você ainda não possui reservas.</div>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Received as sitter -->
  <div class="card shadow-sm">
    <div class="card-header d-flex align-items-center justify-content-between">
      <h2 class="h5 m-0">Recebidas (como cuidador)</h2>
    </div>
    <div class="card-body p-0">
      <% if @received_bookings.any? %>
        <div class="table-responsive">
          <table class="table table-striped table-hover align-middle m-0">
            <thead class="table-light">
              <tr>
                <th style="width: 120px;">Data</th>
                <th>Cliente</th>
                <th>Pet</th>
                <th style="width: 160px;">Ações</th>
              </tr>
            </thead>
            <tbody>
              <% @received_bookings.each do |b| %>
                <% client = b.user %>
                <tr>
                  <td class="fw-semibold"><%= b.availability.date.strftime("%d/%m/%Y") %></td>
                  <td><%= client.name %> <span class="text-muted">(<%= client.email %>)</span></td>
                  <td class="text-muted">
                    <%= "#{b.pet_name} — #{b.animal_type}, #{b.pet_size}, nasc. #{b.pet_birth_year}" %>
                  </td>
                  <td class="d-flex gap-2">
                    <%= link_to wa_link_for(client, b, as: :sitter),
                                class: "btn btn-success btn-sm rounded-circle p-2",
                                target: "_blank",
                                rel: "noopener",
                                title: "Conversar no WhatsApp" do %>
                      <i class="bi bi-whatsapp me-1"></i>
                    <% end %>

                    <%= button_to "Cancelar",
                          availability_booking_path(b.availability, b),
                          method: :delete,
                          data: { confirm: "Cancelar esta reserva?" },
                          class: "btn btn-outline-danger btn-sm" %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <div class="p-4">
          <div class="alert alert-secondary m-0">Nenhuma reserva recebida até o momento.</div>
        </div>
      <% end %>
    </div>

    <% if @received_bookings.any? %>
      <div class="table-responsive">
        <table class="table ps-table table-hover align-middle m-0">
          <thead class="table-tint-indigo">
            <tr>
              <th style="width: 120px;">Data</th>
              <th>Cliente</th>
              <th>Pet</th>
              <th style="width: 160px;">Ações</th>
            </tr>
          </thead>
          <tbody>
            <% @received_bookings.each do |b| %>
              <% client = b.user %>
              <tr class="row-hover-indigo">
                <td class="fw-semibold"><%= b.availability.date.strftime("%d/%m/%Y") %></td>
                <td><%= client.name %> <span class="text-muted">(<%= client.email %>)</span></td>
                <td class="text-muted">
                  <%= "#{b.pet_name} — #{b.animal_type}, #{b.pet_size}, nasc. #{b.pet_birth_year}" %>
                </td>
                <td class="d-flex gap-2 align-items-center">
                  <!-- WhatsApp -->
                  <%= link_to wa_link_for(client, b, as: :sitter),
                              class: "ps-icon icon-indigo",
                              target: "_blank",
                              rel: "noopener",
                              title: "Conversar no WhatsApp" do %>
                    <i class="bi bi-whatsapp"></i>
                  <% end %>

                  <%= button_to "Cancelar",
                        availability_booking_path(b.availability, b),
                        method: :delete,
                        data: { confirm: "Cancelar esta reserva?" },
                        class: "btn btn-outline-danger btn-sm rounded-pill" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <div class="p-4">
        <div class="alert alert-secondary m-0">Nenhuma reserva recebida até o momento.</div>
      </div>
    <% end %>
  </div>
</div>
