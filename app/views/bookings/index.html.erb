<div class="container py-3">
  <div class="d-flex align-items-center justify-content-between mb-3">
    <h1 class="ps-title m-0 text-gradient-emerald">Minhas Reservas</h1>
  </div>

  <!-- Como cliente -->
  <div class="ps-card shadow-sm mb-4 border-0">
    <div class="ps-card-header bg-soft-emerald">
      <div class="d-flex align-items-center gap-2">
        <div class="pill-accent pill-emerald"></div>
        <h2 class="h5 m-0">Como cliente</h2>
      </div>
      <span class="ps-chip chip-emerald">Suas reservas</span>
    </div>

    <% if @my_bookings.any? %>
      <div class="table-responsive">
        <table class="table ps-table table-hover align-middle m-0">
          <thead class="table-tint-emerald">
            <tr>
              <th style="width: 120px;">Data</th>
              <th>Cuidador</th>
              <th>Pet</th>
              <th style="width: 160px;">Ações</th>
            </tr>
          </thead>
          <tbody>
            <% @my_bookings.each do |b| %>
              <% sitter = b.availability.user %>
              <tr class="row-hover-emerald">
                <td class="fw-semibold"><%= b.availability.date.strftime("%d/%m/%Y") %></td>
                <td><%= sitter.name %></td>
                <td class="text-muted">
                  <%= "#{b.pet_name} — #{b.animal_type}, #{b.pet_size}, nasc. #{b.pet_birth_year}" %>
                </td>
                <td class="d-flex gap-2 align-items-center">
                  <!-- WhatsApp -->
                  <%= link_to wa_link_for(sitter, b, as: :client),
                              class: "ps-icon icon-emerald",
                              target: "_blank",
                              rel: "noopener",
                              title: "Conversar no WhatsApp" do %>
                    <i class="bi bi-whatsapp"></i>
                  <% end %>

                  <%= button_to "Cancelar",
                        availability_booking_path(b.availability, b),
                        method: :delete,
                        data: { confirm: "Cancelar esta reserva?" },
                        class: "btn btn-outline-danger btn-sm rounded-pill" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <div class="p-4">
        <div class="alert alert-secondary m-0">Você ainda não possui reservas.</div>
      </div>
    <% end %>
  </div>

  <!-- Recebidas (como cuidador) -->
  <div class="ps-card shadow-sm border-0">
    <div class="ps-card-header bg-soft-indigo">
      <div class="d-flex align-items-center gap-2">
        <div class="pill-accent pill-indigo"></div>
        <h2 class="h5 m-0">Recebidas (como cuidador)</h2>
      </div>
      <span class="ps-chip chip-indigo">Entrantes</span>
    </div>

    <% if @received_bookings.any? %>
      <div class="table-responsive">
        <table class="table ps-table table-hover align-middle m-0">
          <thead class="table-tint-indigo">
            <tr>
              <th style="width: 120px;">Data</th>
              <th>Cliente</th>
              <th>Pet</th>
              <th style="width: 160px;">Ações</th>
            </tr>
          </thead>
          <tbody>
            <% @received_bookings.each do |b| %>
              <% client = b.user %>
              <tr class="row-hover-indigo">
                <td class="fw-semibold"><%= b.availability.date.strftime("%d/%m/%Y") %></td>
                <td><%= client.name %> <span class="text-muted">(<%= client.email %>)</span></td>
                <td class="text-muted">
                  <%= "#{b.pet_name} — #{b.animal_type}, #{b.pet_size}, nasc. #{b.pet_birth_year}" %>
                </td>
                <td class="d-flex gap-2 align-items-center">
                  <!-- WhatsApp -->
                  <%= link_to wa_link_for(client, b, as: :sitter),
                              class: "ps-icon icon-indigo",
                              target: "_blank",
                              rel: "noopener",
                              title: "Conversar no WhatsApp" do %>
                    <i class="bi bi-whatsapp"></i>
                  <% end %>

                  <%= button_to "Cancelar",
                        availability_booking_path(b.availability, b),
                        method: :delete,
                        data: { confirm: "Cancelar esta reserva?" },
                        class: "btn btn-outline-danger btn-sm rounded-pill" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <div class="p-4">
        <div class="alert alert-secondary m-0">Nenhuma reserva recebida até o momento.</div>
      </div>
    <% end %>
  </div>
</div>
