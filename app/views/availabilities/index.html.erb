<div class="container py-3">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="ps-title m-0 text-gradient-emerald">Minhas Disponibilidades</h1>
    <%= link_to new_availability_path, class: "btn btn-ps d-flex align-items-center gap-2" do %>
      <i class="bi bi-plus-lg"></i>
      <span>Nova disponibilidade</span>
    <% end %>
  </div>

  <% if notice.present? %>
    <div class="alert alert-success"><%= notice %></div>
  <% end %>
  <% if alert.present? %>
    <div class="alert alert-danger"><%= alert %></div>
  <% end %>

  <div class="ps-card shadow-sm border-0">
    <div class="ps-card-header bg-soft-emerald">
      <div class="d-flex align-items-center gap-2">
        <div class="pill-accent pill-emerald"></div>
        <h2 class="h6 m-0 text-muted">Gerencie suas datas disponíveis</h2>
      </div>
      <span class="ps-chip chip-emerald">Disponibilidades</span>
    </div>

    <div class="card-body p-0">
      <% if @availabilities.any? %>
        <div class="table-responsive">
          <table class="table ps-table table-hover align-middle m-0">
            <thead class="table-tint-emerald">
              <tr>
                <th style="width: 140px;">Data</th>
                <th style="width: 200px;">Criada em</th>
                <th style="width: 160px;">Ações</th>
              </tr>
            </thead>
            <tbody>
              <% @availabilities.each do |availability| %>
                <tr class="row-hover-emerald">
                  <td class="fw-semibold"><%= availability.date.strftime("%d/%m/%Y") %></td>
                  <td class="text-muted"><%= availability.created_at.strftime("%d/%m/%Y %H:%M") %></td>
                  <td class="d-flex align-items-center gap-2">
                    <% if availability.booking.present? %>
                      <span class="ps-chip chip-indigo">Reservado</span>
                    <% else %>
                      <%= button_to "Excluir",
                            availability_path(availability),
                            method: :delete,
                            data: { confirm: "Tem certeza?" },
                            class: "btn btn-outline-danger btn-sm rounded-pill" %>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <div class="p-4">
          <div class="alert alert-secondary m-0">Você ainda não adicionou disponibilidades.</div>
        </div>
      <% end %>
    </div>
  </div>
</div>
