<h1>Minhas Disponibilidades</h1>

<%= link_to "Nova disponibilidade", new_availability_path, class: "btn btn-primary" %>

<table>
  <thead>
    <tr>
      <th>Data</th>
      <th>Criada em</th>
      <th>Ações</th>
    </tr>
  </thead>
  <tbody>
    <% @availabilities.each do |availability| %>
      <tr>
        <td><%= availability.date.strftime("%d/%m/%Y") %></td>
        <td>
          <%= button_to "Excluir", availability_path(availability), method: :delete, data: { confirm: "Tem certeza?" }, class: "btn btn-danger btn-sm" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
