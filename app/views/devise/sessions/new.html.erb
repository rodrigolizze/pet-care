<div class="sign-in">
  <div class="container-sign-in p-5 d-flex justify-content-between">

  
    <div data-controller="carousel">
      <%= image_tag "signin_image1.png",
        data: {
          carousel_target: "image",
          photo1: asset_path("signin_image1.png"),
          photo2: asset_path("signin_image2.jpeg"),
          photo3: asset_path("signin_image3.JPEG"),
          photo4: asset_path("signin_image4.JPEG")
        },
        class: "rounded-image",
        width: 100,
        style: "transition: opacity 0.5s ease-in-out;"
      %>
    </div>

    <div class="col-4">
      <h2>Entrar</h2>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email, 
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password, label: "Senha",
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, label: "Lembrar de mim", 
                      as: :boolean if devise_mapping.rememberable? %>
        </div>
        <div class="d-grid">
          <button type="submit" class="btn btn-primary">
            <i class="fa-solid fa-paw"></i> Entrar
          </button>
        </div>
      <% end %>

    <%= render "devise/shared/links" %>
  </div>
  </div>
</div>

