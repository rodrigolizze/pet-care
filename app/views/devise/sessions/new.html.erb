<div class="sign-in">
  <div class="container-sign-in p-5 d-flex justify-content-between">

  <%= image_tag "sign_in_image.png", alt: "Sign in image", class: "rounded-image" %>


      <div class="col-4">
        <h2>Entrar</h2>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email, 
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email" } %>
            <%= f.input :password, label: "Senha",
                        required: false,
                        input_html: { autocomplete: "current-password" } %>
            <%= f.input :remember_me, label: "Lembrar de mim", 
                        as: :boolean if devise_mapping.rememberable? %>
          </div>

          <div class="d-grid">
            <button type="submit" class="btn btn-primary">
              <i class="fa-solid fa-paw"></i> Entrar
            </button>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
  </div>
  </div>
</div>

