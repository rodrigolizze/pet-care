<div class="container py-5" style="max-width: 960px;">
  <!-- Hero -->
  <section class="hero-how mb-4 rounded-4 p-4 p-md-5 text-center">
    <h1 class="ps-title display-6 m-0 text-gradient-emerald">Como Funciona</h1>
    <p class="text-muted mt-2 mb-0">Em apenas três passos simples, você conecta seu pet ao cuidador ideal.</p>
  </section>

  <!-- Steps -->
  <div class="row g-4">
    <!-- 1 -->
    <div class="col-12 col-md-4">
      <div class="ps-card h-100 border-0 shadow-sm card-hover text-center p-4 position-relative">
        <div class="step-badge step-emerald">1</div>
        <div class="feature-icon icon-emerald mb-2">
          <i class="bi bi-person-plus"></i>
        </div>
        <h5 class="card-title mb-2">Cadastre-se</h5>
        <p class="card-text text-muted">Crie sua conta gratuitamente e complete seu perfil.</p>
      </div>
    </div>

    <!-- 2 -->
    <div class="col-12 col-md-4">
      <div class="ps-card h-100 border-0 shadow-sm card-hover text-center p-4 position-relative">
        <div class="step-badge step-indigo">2</div>
        <div class="feature-icon icon-indigo mb-2">
          <i class="bi bi-search-heart"></i>
        </div>
        <h5 class="card-title mb-2">Encontre Cuidadores</h5>
        <p class="card-text text-muted">Busque por cuidadores verificados na sua região.</p>
      </div>
    </div>

    <!-- 3 -->
    <div class="col-12 col-md-4">
      <div class="ps-card h-100 border-0 shadow-sm card-hover text-center p-4 position-relative">
        <div class="step-badge step-rose">3</div>
        <div class="feature-icon icon-rose mb-2">
          <i class="bi bi-calendar-check"></i>
        </div>
        <h5 class="card-title mb-2">Agende & Acompanhe</h5>
        <p class="card-text text-muted">Marque as datas e acompanhe os cuidados com segurança.</p>
      </div>
    </div>
  </div>

  <!-- CTA -->
  <div class="text-center mt-4">
    <div class="d-inline-flex gap-2 flex-wrap">
      <%= link_to new_user_registration_path, class: "btn btn-ps d-flex align-items-center gap-2" do %>
        <i class="bi bi-person-plus"></i>
        <span>Criar conta</span>
      <% end %>
      <%= link_to availabilities_path, class: "btn btn-outline-secondary rounded-pill d-flex align-items-center gap-2" do %>
        <i class="bi bi-search"></i>
        <span>Explorar cuidadores</span>
      <% end %>
    </div>
  </div>
</div>
