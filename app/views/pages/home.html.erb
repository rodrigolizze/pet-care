<div class="container mt-4">
  <div class="d-flex flex-wrap justify-content-center gap-3">
    <% if @sitters.present? && @sitters.any? %>
      <% @sitters.each do |sitter| %>
        <div class="sitter-card p-3 rounded shadow" style="width: 300px; height: 300px; overflow: hidden;">
          <%= link_to user_path(sitter) do %>
            <%= cl_image_tag("c5ldsjbxtnqcwksfgsn0",
                  crop: :thumb, gravity: :face,
                  class: "img-fluid rounded mb-2",
                  html: { style: "width: 100%; height: 100%; object-fit: cover;" }) %>
          <% end %>

          <div class="info" style="position: relative; margin-top: 10px;">
            <p><%= sitter.name %></p>
            <p><%= sitter.address %></p>
          </div>
        </div>
      <% end %>
    <% else %>
      <p>Nenhum sitter encontrado</p>
    <% end %>
  </div>
</div>